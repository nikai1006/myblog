FROM python:3.7.3
MAINTAINER nikai nikai.ni@klook.com

WORKDIR /usr/src/app
COPY blog blog
COPY blog2 blog2
COPY myblog myblog
COPY docker_conf docker_conf
ADD manage.py manage.py
ADD requirements.txt requirements.txt
RUN mkdir logs
RUN pip install -i https://pypi.tuna.tsinghua.edu.cn/simple -r requirements.txt
RUN pip install https://github.com/darklow/django-suit/tarball/v2

EXPOSE 8000 5555 9001
ENTRYPOINT supervisord -c /usr/src/app/docker_conf/supervisord.conf